{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mpicc build",
            "type": "shell",
            "command": "mpicc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}